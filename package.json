{
  "name": "connect-pomerium",
  "version": "2.0.0",
  "description": "Automate Pomerium tunnel creation for testing, CI/CD, and automation (requires pomerium-cli v0.29.0+)",
  "type": "module",
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "index.js",
    "index.d.ts",
    "index.mjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run typecheck && npm run lint && npm run test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "check:exports": "attw --pack",
    "prepublishOnly": "npm run build",
    "sync": "git pull --rebase && npm install && npm test",
    "sync:quick": "git pull --rebase && npm install",
    "release": "node scripts/release.mjs"
  },
  "keywords": [
    "pomerium",
    "tunnel",
    "automation",
    "ci-cd",
    "testing",
    "proxy",
    "zero-trust",
    "authentication",
    "sso"
  ],
  "author": "oharu121 <jefflin1201@gmail.com> (https://github.com/oharu121)",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@clack/prompts": "^0.11.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "playwright": "^1.48.0",
    "prettier": "^3.2.4",
    "puppeteer": "^24.31.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oharu121/connect-pomerium.git"
  },
  "bugs": {
    "url": "https://github.com/oharu121/connect-pomerium/issues"
  },
  "homepage": "https://github.com/oharu121/connect-pomerium#readme"
}
